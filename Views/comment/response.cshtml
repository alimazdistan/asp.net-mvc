@model forum.Models.Comment

@{
    ViewBag.Title = "response";
}

<h2>Details</h2>

@*  *@
    @using (Html.BeginForm())
    {
        <fieldset>
    <legend>Comment</legend>
    <div class="display-label">
        @Html.ValidationMessage("","please fill * filed")
         @Html.DisplayNameFor(model => model.Title)
    </div>
    <div class="display-field">
        @Html.TextBoxFor(model => model.Title)
        @Html.ValidationMessageFor(model => model.Title)
    </div>

    <div class="display-label">
         @Html.DisplayNameFor(model => model.Content)
    </div>
    <div class="display-field">
        
        @Html.Kendo().EditorFor(m=>m.Content).Encode(false).Tools(tools => tools.Clear()
                    .Bold().Italic().Underline().FontSize().FontColor().JustifyLeft()
                    .JustifyCenter().JustifyRight().JustifyFull().InsertUnorderedList()
                    .InsertOrderedList().Indent().CreateLink().InsertImage()).Value(Server.HtmlDecode(Model.Content))

        
        @Html.ValidationMessage("Content")
    </div>

    <input type="submit" value="send" />

    
</fieldset>
    }
<p>
   
    @Html.ActionLink("Back ", "comment","home",new{id=ViewData["toppicid"]},null)
</p>
